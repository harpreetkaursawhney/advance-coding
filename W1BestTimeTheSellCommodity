#include <stdio.h>

int main() {
    int prices[] = {7, 1, 5, 3, 6, 4};
    int n = sizeof(prices) / sizeof(prices[0]);
    int min = 0, maxProfit = 0, buy = 0, sell = 0;

    for (int i = 1; i < n; i++) {
        if (prices[i] - prices[min] > maxProfit) {
            maxProfit = prices[i] - prices[min];
            buy = min;
            sell = i;
        }
        if (prices[i] < prices[min])
            min = i;
    }

    printf("Buy on day %d (price %d), Sell on day %d (price %d)\n",
           buy, prices[buy], sell, prices[sell]);
    return 0;
}
